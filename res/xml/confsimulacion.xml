<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        android:defaultValue="SensorManager.SENSOR_DELAY_NORMAL"
        android:entries="@array/frecuencia_recogida"
        android:entryValues="@array/frecuencias"
        android:key="frecuencia"
        android:summary="Elige una frecuencia de los sensores."
        android:title="FRECUENCIA DE MUESTREO" />
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/temporizador"
        android:entryValues="@array/temporizadoropciones"
        android:key="temporizador"
        android:title="TEMPORIZADOR" />
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/tiempograbacion"
        android:entryValues="@array/opcionestiempograbacion"
        android:key="tiempo"
        android:summary="Selecciona un tiempo que durará la grabación."
        android:title="TIEMPO DE GRABACIÓN" />

</PreferenceScreen>