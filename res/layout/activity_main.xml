<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.app.MainActivity" 
    android:background="@drawable/f">

    <Button
        android:id="@+id/medicion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensoresdisponibles"
        android:layout_marginTop="50dp"
        android:background="@drawable/botonamarillo"
        android:text="@string/medicion"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sensoresdisponibles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/botonamarillo"
        android:text="@string/sensores"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cargargrafica"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicion"
        android:layout_marginTop="50dp"
        android:background="@drawable/botonamarillo"
        android:text="@string/cargargraficas"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>
