<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantalla" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/acelerometer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/acelerometro"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acelerometro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/graficaAcelerometro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:drawableTop="@drawable/iconografic"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/grafica"
                android:textColor="#ffff" />

        </LinearLayout>

        <Button
            android:id="@+id/giroscopio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/giroscopio"
            android:textColor="#ffffff" />

         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/giroscopo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
            android:textColor="#ffffff" />
          <Button
                android:id="@+id/graficaGiroscopo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
           
                android:drawableTop="@drawable/iconografic"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/grafica"
                android:textColor="#ffff" />
        </LinearLayout>

        <Button
            android:id="@+id/magnetic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/magnetico"
            android:textColor="#ffffff" />

        
             <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/magnetico"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:layout_weight="3"
            android:textColor="#ffffff" />
          <Button
                android:id="@+id/graficaMagnetico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:drawableTop="@drawable/iconografic"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/grafica"
                android:textColor="#ffff" />
        </LinearLayout>

        <Button
            android:id="@+id/proximity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/proximidad"
            android:textColor="#ffffff" />

        
            
        <TextView
            android:id="@+id/detecta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          
            android:textColor="#ffffff" />
   

        
             <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/proximidad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:layout_weight="3"
            android:textColor="#ffffff" />
          <Button
                android:id="@+id/graficaProximidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:drawableTop="@drawable/iconografic"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/grafica"
                android:textColor="#ffff" />
        </LinearLayout>

        <Button
            android:id="@+id/luminosity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/luminosidad"
            android:textColor="#ffffff" />
    	 <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/luminosidad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:layout_weight="3"
            android:textColor="#ffffff" />
          <Button
                android:id="@+id/graficaLuminosidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:drawableTop="@drawable/iconografic"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/grafica"
                android:textColor="#ffff" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>